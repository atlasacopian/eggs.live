// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Store model represents retail stores that sell eggs
model Store {
  id       String     @id
  name     String
  website  String
  prices   EggPrice[]
  
  @@map("stores")
}

// EggPrice model represents individual price points for eggs at specific stores
model EggPrice {
  id        String   @id @default(cuid())
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  price     Float
  date      DateTime @db.Date
  eggType   String   // "regular" or "organic"
  
  @@unique([storeId, date, eggType])
  @@map("egg_prices")
}

// AveragePrice model represents the daily average price across all stores
model AveragePrice {
  id         String   @id @default(cuid())
  date       DateTime @db.Date
  price      Float
  storeCount Int
  eggType    String   // "regular" or "organic"
  
  @@unique([date, eggType], name: "date_eggType")
  @@map("average_prices")
}

