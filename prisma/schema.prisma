// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id      String     @id
  name    String
  website String
  prices  EggPrice[]
}

model EggPrice {
  id      String   @id @default(cuid())
  storeId String
  price   Float
  date    DateTime
  eggType String   // "regular" or "organic"
  store   Store    @relation(fields: [storeId], references: [id])

  @@index([storeId])
  @@index([date])
}

model AveragePrice {
  id         String   @id @default(cuid())
  price      Float
  date       DateTime
  storeCount Int
  eggType    String   // "regular" or "organic"

  @@unique([date, eggType])
}
