generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Store information
model store {
  id              Int               @id @default(autoincrement())
  name            String
  website         String?
  store_locations store_locations[]
}

// Store locations with geographic data
model store_locations {
  id            Int             @id @default(autoincrement())
  store_id      Int
  store         store           @relation(fields: [store_id], references: [id])
  address       String?
  zipCode       String
  latitude      Float?
  longitude     Float?
  la_egg_prices la_egg_prices[]
  egg_prices    egg_prices[]

  @@index([zipCode])
}

// Los Angeles specific egg prices
model la_egg_prices {
  id               Int             @id @default(autoincrement())
  store_location_id Int
  store_location   store_locations @relation(fields: [store_location_id], references: [id])
  price            Float
  date             DateTime
  eggType          String          @default("regular")
  inStock          Boolean         @default(true)

  @@unique([store_location_id, date, eggType])
  @@index([date])
}

// National egg prices
model egg_prices {
  id               Int             @id @default(autoincrement())
  store_location_id Int
  store_location   store_locations @relation(fields: [store_location_id], references: [id])
  price            Float
  date             DateTime
  eggType          String          @default("regular")
  inStock          Boolean         @default(true)

  @@unique([store_location_id, date, eggType])
  @@index([date])
  @@index([store_location_id])
}

